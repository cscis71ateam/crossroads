extends ../layout

block content
  //Bootstrap row starts here inside the main container coming from the layout file.
  //Bootstrap row starts here inside the main container from the layout file.
  main(role='main')
    // Page Content
    .container
      //h2.mt-5= title
      br
      br
      .row
        .col-md-8.col-md-offset-2
          h3.mt-5.text-danger Sure you want to delete this blog? 
          br
          
          //Delete blog bootstrap form.
          form(method="POST" action="/blogs/delete/" + blog._id)
            div.form-group
              label(for='title') Title *:
              input#title.form-control(type='text', value=blog.title, name='title' readonly)
            div.form-row
              div.form-group.col-md-12
                  label(for='author') Author*:
                  input#author.form-control(type='text', value=blog.author, name='author' readonly)
              //div.form-group.col-md-6
                  label(for='image_file_name') Image File Name:
                  input#image_file_name.form-control(type='text', value=blog.image_file_name name='image_file_name' readonly disabled)
            div.form-group
              label(for='description') Text Contents *:
              //input#description.form-control(type='text', rows='3', value=blog.description, name='description' readonly disabled)
              textarea#description.form-control( rows='6', name='description', readonly)= blog.description
            div.form-group
              input#id.form-control(type="hidden" value=blog._id name="_id")
            button.btn.btn-primary(type='submit') Yes 
            | &nbsp;
            |
            a.btn.btn-primary(href='/blogs' role='button') Cancel